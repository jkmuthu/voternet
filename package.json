{
  "name": "voternet",
  "version": "0.1.0",
  "description": "Production-grade civic and political platform - Identity Core",
  "main": "dist/main.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/main.ts",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/main.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:migrate": "typeorm migration:run -d dist/libraries/database/data-source.js",
    "db:generate": "typeorm migration:generate -d dist/libraries/database/data-source.js -n",
    "db:drop": "typeorm schema:drop -d dist/libraries/database/data-source.js",
    "db:seed": "cross-env NODE_ENV=development tsx src/database/seed-test-users.ts"
  },
  "keywords": [
    "voting",
    "civic-tech",
    "politics"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "convict": "^6.2.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.0.0",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.18.0",
    "pino": "^8.16.2",
    "pino-http": "^8.5.0",
    "pino-pretty": "^10.2.3",
    "rate-limit-redis": "^4.1.5",
    "redis": "^4.6.11",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/convict": "^6.1.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
