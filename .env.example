# Environment
NODE_ENV=development

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=3000

# Database
DATABASE_URL=postgresql://voternet:voternet@localhost:5432/voternet_dev

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-secret-key-min-256-bits-here-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-min-256-bits-here-change-in-production

# CORS
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
